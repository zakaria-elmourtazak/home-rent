@{
    var errors = ViewData.ModelState.Values.SelectMany(v => v.Errors).Select(e => e.ErrorMessage).ToList();
    var loginError = TempData["LoginError"] as string;
}

    <!-- Breadcrumb -->
    <div class="container mx-auto px-4 pt-4">
        <nav class="text-sm breadcrumbs">
            <ul class="flex space-x-2">
                <li><a  class="text-gray-600 hover:text-primary">Home</a></li>
                <li class="before:content-['/'] before:mx-2 text-gray-400">Sign In</li>
            </ul>
        </nav>
    </div>

    <!-- Main Content -->
    <main class="min-h-screen flex items-center justify-center px-4">
        <div class="max-w-md w-full fade-in">
            <!-- Logo and Header -->
            <div class="text-center mb-8">
                <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-home text-white text-2xl"></i>
                </div>
                <h2 class="text-3xl font-bold text-gray-800 mb-2">Welcome Back</h2>
                <p class="text-gray-600">Sign in to your account to continue</p>
            </div>
    @if (!string.IsNullOrEmpty(loginError))
            {
                <div class="alert alert-danger alert-dismissible fade show mb-6" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <strong>Login Failed</strong>
                    <p class="mb-0">@loginError</p>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @* Model state summary *@
            @if (ViewData.ModelState.Any(m => m.Value.Errors.Count > 0))
            {
                <div class="alert alert-warning alert-dismissible fade show mb-6" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Please fix the following errors:</strong>
                    <ul class="mb-0 mt-2">
                        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@err.ErrorMessage</li>
                        }
                    </ul>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <!-- Sign In Card -->
            <div class="bg-white rounded-xl shadow-xl card-hover p-8">
                <form id="signin-form" asp-controller="Account"  asp-action="LoginAccount" method="post" class="space-y-6">
                    <!-- Email Input -->
                    <div class="input-group">
                        <input type="email" name="Email" id="email" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition" placeholder=" " required>
                        <label for="email">Email Address</label>
                    </div>

                    <!-- Password Input -->
                    <div class="input-group">
                        <input type="password" name="Password" id="password" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition" placeholder=" " required>
                        <label for="password">Password</label>
                        <button type="button" class="absolute right-3 top-3 text-gray-400 hover:text-gray-600" onclick="togglePassword()">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>

                    <!-- Remember Me & Forgot Password -->
                    <div class="flex items-center justify-between">
                        <label class="flex items-center">
                            <input type="checkbox" class="w-4 h-4 text-primary border-gray-300 rounded focus:ring-primary">
                            <span class="ml-2 text-sm text-gray-600">Remember me</span>
                        </label>
                        <a href="#" class="text-sm text-primary hover:text-secondary transition">Forgot password?</a>
                    </div>

                    <!-- Sign In Button -->
                    <button type="submit" class="w-full bg-primary hover:bg-secondary text-white py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 hover:shadow-lg">
                        <i class="fas fa-sign-in-alt mr-2"></i>Sign In
                    </button>
                </form>

                <!-- Divider -->
                <div class="flex items-center my-6">
                    <div class="flex-1 border-t border-gray-300"></div>
                    <span class="px-4 text-gray-500 text-sm">OR</span>
                    <div class="flex-1 border-t border-gray-300"></div>
                </div>

                <!-- Social Sign In -->
                <div class="space-y-3">
                    @* <button class="w-full social-btn bg-white border border-gray-300 text-gray-700 py-3 rounded-lg flex items-center justify-center hover:bg-gray-50">
                        <i class="fab fa-google text-red-500 mr-3"></i>
                        Continue with Google
                    </button> *@
                    @* <button class="w-full social-btn bg-white border border-gray-300 text-gray-700 py-3 rounded-lg flex items-center justify-center hover:bg-gray-50">
                        <i class="fab fa-facebook text-blue-600 mr-3"></i>
                        Continue with Facebook
                    </button> *@
                   
                </div>
            </div>

            <!-- Sign Up Link -->
            <div class="text-center mt-6">
                <p class="text-gray-600">
                    Don't have an account? 
                    <a asp-controller="Account" asp-action="Register" class="text-primary hover:text-secondary font-semibold transition">Sign up</a>
                </p>
            </div>

            <!-- Features -->
            <div class="grid grid-cols-3 gap-4 mt-8">
                <div class="text-center">
                    <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-2">
                        <i class="fas fa-shield-alt text-green-500"></i>
                    </div>
                    <h4 class="text-sm font-semibold text-gray-800">Secure</h4>
                    <p class="text-xs text-gray-600">Your data is protected</p>
                </div>
                <div class="text-center">
                    <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-2">
                        <i class="fas fa-bolt text-blue-500"></i>
                    </div>
                    <h4 class="text-sm font-semibold text-gray-800">Fast</h4>
                    <p class="text-xs text-gray-600">Quick access to your account</p>
                </div>
                <div class="text-center">
                    <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-2">
                        <i class="fas fa-mobile-alt text-purple-500"></i>
                    </div>
                    <h4 class="text-sm font-semibold text-gray-800">Mobile</h4>
                    <p class="text-xs text-gray-600">Access anywhere, anytime</p>
                </div>
            </div>
        </div>
    @* </main> *@
