@{
    // collect server errors and any TempData message into a single list to display at top
    var errors = ViewData.ModelState.Values.SelectMany(v => v.Errors).Select(e => e.ErrorMessage).Where(s => !string.IsNullOrWhiteSpace(s)).ToList();
    var registerError = TempData["RegisterError"] as string;
    var allErrors = new List<string>();
    if (!string.IsNullOrWhiteSpace(registerError)) allErrors.Add(registerError);
    allErrors.AddRange(errors);
}
