    <!-- Hero Section -->
    <section class="py-16 bg-gradient-green  from-green-500 to-green-600 text-white">
        <div class="container mx-auto px-4 text-center">
            <h1 class="text-4xl md:text-5xl font-bold mb-6 text-white">Contact Us</h1>
            <p class="text-xl max-w-3xl mx-auto">Have questions? We're here to help. Reach out to our team anytime.</p>
        </div>
    </section>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-12">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
            <!-- Contact Form -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow-sm p-8">
                    <h2 class="text-lg font-bold mb-6">Send us a Message</h2>
                    <form id="contact-form" class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-gray-500 font-medium mb-2">Name</label>
                                <input type="text" class="w-full p-3 border rounded-lg input" required>
                            </div>
                            <div>
                                <label class="block text-gray-500 font-medium mb-2">Email</label>
                                <input type="email" class="w-full p-3 border rounded-lg input" required>
                            </div>
                        </div>
                        
                        <div>
                            <label class="block text-gray-500 font-medium mb-2">Subject</label>
                            <input type="text" class="w-full p-3 border rounded-lg input" required>
                        </div>
                        
                        <div>
                            <label class="block text-gray-500 font-medium mb-2">Message</label>
                            <textarea class="w-full p-3 border rounded-lg input h-40" required></textarea>
                        </div>
                        
                        <button type="submit" class=" button bg-primary hover:bg-secondary text-white px-6 py-3 rounded-lg transition font-semibold">
                            Send Message
                        </button>
                    </form>
                </div>
            </div>
            
            <!-- Contact Information -->
            <div>
                <div class="bg-white rounded-lg shadow-sm p-8 mb-8">
                    <h2 class="text-lg font-bold mb-6">Contact Information</h2>
                    
                    <div class="space-y-6">
                        <div class="flex">
                            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                                <i class="fas fa-map-marker-alt text-primary"></i>
                            </div>
                            <div>
                                <h3 class="font-bold text-lg mb-1">Our Location</h3>
                                <p class="text-gray-600">123 Main Street<br>New York, NY 10001</p>
                            </div>
                        </div>
                        
                        <div class="flex">
                            <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mr-4">
                                <i class="fas fa-phone-alt text-green-500"></i>
                            </div>
                            <div>
                                <h3 class="font-bold text-lg mb-1">Phone Number</h3>
                                <p class="text-gray-600">(123) 456-7890</p>
                            </div>
                        </div>
                        
                        <div class="flex">
                            <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mr-4">
                                <i class="fas fa-envelope text-purple-500"></i>
                            </div>
                            <div>
                                <h3 class="font-bold text-lg mb-1">Email Address</h3>
                                <p class="text-gray-600">info@homerent.com</p>
                            </div>
                        </div>
                        
                        <div class="flex">
                            <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center mr-4">
                                <i class="fas fa-clock text-yellow-500"></i>
                            </div>
                            <div>
                                <h3 class="font-bold text-lg mb-1">Office Hours</h3>
                                <p class="text-gray-600">Monday - Friday: 9am - 6pm<br>Saturday: 10am - 4pm</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Social Media -->
                <div class="bg-white rounded-lg shadow-sm p-8">
                    <h2 class="text-lg font-bold mb-6">Follow Us</h2>
                    <div class="flex space-x-4">
                        <a href="#" class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center text-white hover:bg-blue-500 transition">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="w-10 h-10 bg-blue-400 rounded-full flex items-center justify-center text-white hover:bg-blue-500 transition">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="w-10 h-10 bg-pink-600 rounded-full flex items-center justify-center text-white hover:bg-pink-500 transition">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="w-10 h-10 bg-blue-800 rounded-full flex items-center justify-center text-white hover:bg-blue-900 transition">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Map -->
        <div class="mt-12 bg-white rounded-lg shadow-sm p-8">
    <h2 class="text-lg font-bold mb-6">Our Location</h2>

    <div class="w-full h-96 rounded-xl overflow-hidden border-2 border-dashed">
        <iframe
            width="100%"
            height="100%"
            frameborder="0"
            scrolling="no"
            marginheight="0"
            marginwidth="0"
        src="https://www.openstreetmap.org/export/embed.html?bbox=-7.65%2C33.55%2C-7.55%2C33.63&amp;layer=mapnik&amp;marker=33.589886%2C-7.603869"
            style="border:0;">
        </iframe>
    </div>

    <p class="text-sm text-gray-600 mt-2">
        <a href="https://www.openstreetmap.org/?mlat=40.7489&amp;mlon=-73.9851#map=14/40.7489/-73.9851" target="_blank" class="text-primary hover:underline">
            Open in OpenStreetMap
        </a>
    </p>
</div>
        </div>
    </main>
