@{
    ViewData["Title"] = "Home Page";
}


    <!-- Breadcrumb -->
    <div class="container mx-auto px-4 py-4">
        <nav class="text-sm breadcrumbs">
            <ul class="flex space-x-2">
                <li><a href="index.html" class="text-gray-600 hover:text-primary">Home</a></li>
                <li class="before:content-['/'] before:mx-2 text-gray-400">Listings</li>
            </ul>
        </nav>
    </div>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Filters Sidebar -->
            <aside class="lg:w-1/4 bg-white rounded-lg shadow-md p-6 h-fit">
                <h2 class="text-xl font-bold mb-6">Filters</h2>
                
                <form id="filter-form">
                    <!-- Location -->
                    <div class="mb-6">
                        <label class="block text-gray-700 font-medium mb-2">Location</label>
                        <input type="text" placeholder="City, State" class="w-full p-3 border rounded-lg">
                    </div>
                    
                    <!-- Price Range -->
                    <div class="mb-6">
                        <label class="block text-gray-700 font-medium mb-2">Price Range</label>
                        <div class="grid grid-cols-2 gap-3">
                            <div>
                                <input type="number" placeholder="Min" class="w-full p-3 border rounded-lg">
                            </div>
                            <div>
                                <input type="number" placeholder="Max" class="w-full p-3 border rounded-lg">
                            </div>
                        </div>
                    </div>
                    
                    <!-- Bedrooms -->
                    <div class="mb-6">
                        <label class="block text-gray-700 font-medium mb-2">Bedrooms</label>
                        <select class="w-full p-3 border rounded-lg">
                            <option>Any</option>
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4+</option>
                        </select>
                    </div>
                    
                    <!-- Property Type -->
                    <div class="mb-6">
                        <label class="block text-gray-700 font-medium mb-2">Property Type</label>
                        <div class="space-y-2">
                            <div class="flex items-center">
                                <input type="checkbox" id="apartment" class="mr-2">
                                <label for="apartment">Apartment</label>
                            </div>
                            <div class="flex items-center">
                                <input type="checkbox" id="house" class="mr-2">
                                <label for="house">House</label>
                            </div>
                            <div class="flex items-center">
                                <input type="checkbox" id="condo" class="mr-2">
                                <label for="condo">Condo</label>
                            </div>
                            <div class="flex items-center">
                                <input type="checkbox" id="studio" class="mr-2">
                                <label for="studio">Studio</label>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Amenities -->
                    <div class="mb-6">
                        <label class="block text-gray-700 font-medium mb-2">Amenities</label>
                        <div class="space-y-2">
                            <div class="flex items-center">
                                <input type="checkbox" id="wifi" class="mr-2">
                                <label for="wifi">WiFi</label>
                            </div>
                            <div class="flex items-center">
                                <input type="checkbox" id="parking" class="mr-2">
                                <label for="parking">Parking</label>
                            </div>
                            <div class="flex items-center">
                                <input type="checkbox" id="ac" class="mr-2">
                                <label for="ac">Air Conditioning</label>
                            </div>
                            <div class="flex items-center">
                                <input type="checkbox" id="pet-friendly" class="mr-2">
                                <label for="pet-friendly">Pet Friendly</label>
                            </div>
                        </div>
                    </div>
                    
                    <button type="submit" class="w-full bg-primary hover:bg-secondary text-white py-3 rounded-lg transition font-semibold">
                        Apply Filters
                    </button>
                </form>
            </aside>
            
            <!-- Property Listings -->
            <div class="lg:w-3/4">
                <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 bg-white p-6 rounded-lg shadow-md">
                    <h2 class="text-2xl font-bold mb-4 md:mb-0">Available Properties</h2>
                    
                    <div class="flex flex-wrap gap-4">
                        <div class="flex items-center">
                            <label class="mr-2">Sort by:</label>
                            <select class="p-2 border rounded-lg">
                                <option>Price: Low to High</option>
                                <option>Price: High to Low</option>
                                <option>Newest First</option>
                                <option>Oldest First</option>
                            </select>
                        </div>
                        
                        <div class="flex items-center">
                            <button class="p-2 border rounded-lg mr-2 active-view" title="Grid View">
                                <i class="fas fa-th-large"></i>
                            </button>
                            <button class="p-2 border rounded-lg" title="List View">
                                <i class="fas fa-list"></i>
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- Properties Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <!-- Property Card 1 -->
<div class="bg-white rounded-lg shadow-md overflow-hidden 
     transition-all duration-300 ease-out 
     hover:-translate-y-2 hover:shadow-lg">
                        <img src="https://images.unsplash.com/photo-1560448204-e02f11c3d0e2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80" alt="Modern Apartment" class="w-full h-48 object-cover">
                        <div class="p-6">
                            <div class="flex justify-between items-start">
                                <h3 class="text-xl font-bold">$1,200/month</h3>
                                <span class="bg-primary text-white text-sm px-3 py-1 rounded-full">Apartment</span>
                            </div>
                            <p class="text-gray-600 mt-2"><i class="fas fa-map-marker-alt text-red-500 mr-2"></i>New York, NY</p>
                            <div class="flex justify-between mt-4 text-gray-700">
                                <span><i class="fas fa-bed mr-1"></i> 2 Beds</span>
                                <span><i class="fas fa-bath mr-1"></i> 1 Bath</span>
                                <span><i class="fas fa-ruler-combined mr-1"></i> 900 sqft</span>
                            </div>
                            <p class="mt-4 text-gray-600">Beautiful modern apartment in the heart of downtown with amazing city views.</p>
                            <a asp-controller="Home" asp-action="PropertyDetail">                            <button class="mt-6 w-full bg-primary hover:bg-secondary text-white py-2 rounded-lg transition" asp-area="" asp-controller="Home" asp-action="propertyDetail">View Details 1</button>
</a>
                        </div>
                    </div>
                    
                    <!-- Property Card 2 -->
                    <div class="bg-white rounded-lg shadow-md overflow-hidden 
