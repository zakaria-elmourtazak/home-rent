@{
    ViewData["Title"] = "Home Page";
}

    <div class="container mx-auto px-4 py-8 flex flex-col md:flex-row gap-8">
            @await Html.PartialAsync("_AccountSidebar")


        <main class="flex-1">
            <div class="bg-white rounded-lg shadow p-6 mb-6">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                    <div>
                        <h2 class="text-2xl font-bold">Messages</h2>
                        <p class="text-gray-600">View and respond to tenant inquiries</p>
                    </div>
                    <div class="flex flex-wrap gap-3">
                        <select class="border rounded-lg p-3">
                            <option>All Conversations</option>
                            <option>Unread</option>
                            <option>Flagged</option>
                        </select>
                        <div class="relative">
                            <input type="text" placeholder="Search messages" class="border rounded-lg pl-10 pr-4 py-3 w-full">
                            <i class="fas fa-search absolute left-3 top-3.5 text-gray-400"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <div class="bg-white rounded-xl shadow border border-gray-100">
                    <div class="p-4 border-b flex items-center justify-between">
                        <h3 class="font-semibold">Conversations</h3>
                        <button class="text-primary text-sm">New Message</button>
                    </div>
                    <div class="divide-y">
                        <div class="p-4 hover:bg-gray-50 cursor-pointer">
                            <div class="flex justify-between">
                                <h4 class="font-semibold">Sarah Johnson</h4>
                                <span class="text-xs text-gray-500">2m ago</span>
                            </div>
                            <p class="text-sm text-primary">Apartment tour request</p>
                            <p class="text-gray-600 text-sm truncate">Hi! I'm interested in the downtown apartment. Is it still available?</p>
                        </div>
                        <div class="p-4 hover:bg-gray-50 cursor-pointer bg-blue-50">
                            <div class="flex justify-between">
                                <h4 class="font-semibold">Michael Brown</h4>
                                <span class="text-xs text-gray-500">1h ago</span>
                            </div>
                            <p class="text-sm text-primary">Viewing schedule</p>
                            <p class="text-gray-600 text-sm truncate">Yes, the property is available. I can show it tomorrow at 3 PM.</p>
                        </div>
                        <div class="p-4 hover:bg-gray-50 cursor-pointer">
                            <div class="flex justify-between">
                                <h4 class="font-semibold">Emily Davis</h4>
                                <span class="text-xs text-gray-500">2d ago</span>
                            </div>
                            <p class="text-sm text-primary">Lease follow-up</p>
                            <p class="text-gray-600 text-sm truncate">Thanks for the tour. I'm ready to move forward with the lease.</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow border border-gray-100 lg:col-span-2">
                    <div class="p-4 border-b flex items-center justify-between">
                        <div>
                            <h3 class="font-semibold">Michael Brown</h3>
                            <p class="text-sm text-gray-500">Urban Loft Inquiry</p>
                        </div>
                        <div class="space-x-2">
                            <button class="text-primary"><i class="fas fa-flag"></i></button>
                            <button class="text-gray-500"><i class="fas fa-ellipsis-h"></i></button>
                        </div>
                    </div>
                    <div class="p-4 space-y-6 h-80 overflow-y-auto">
                        <div>
                            <div class="flex justify-between text-sm text-gray-500">
                                <span>Michael Brown</span>
                                <span>2 hours ago</span>
                            </div>
                            <p class="mt-2 text-gray-700 bg-gray-50 p-4 rounded-lg">Hi, I'm interested in the urban loft in downtown Chicago. Is it still available for viewing this weekend?</p>
                        </div>
                        <div>
                            <div class="flex justify-between text-sm text-gray-500">
                                <span class="text-primary">You</span>
                                <span>1 hour ago</span>
                            </div>
                            <p class="mt-2 text-gray-700 bg-blue-50 p-4 rounded-lg">Yes, the loft is available. I can show it Sunday at 2 PM or Monday at 11 AM. Let me know what works best!</p>
                        </div>
                        <div>
                            <div class="flex justify-between text-sm text-gray-500">
                                <span>Michael Brown</span>
                                <span>Just now</span>
                            </div>
                            <p class="mt-2 text-gray-700 bg-gray-50 p-4 rounded-lg">Sunday at 2 PM works great. I'll be there. Thanks!</p>
                        </div>
                    </div>
                    <div class="p-4 border-t">
                        <form class="flex gap-3">
                            <input type="text" placeholder="Type your message..." class="flex-1 border rounded-lg p-3">
                            <button class="bg-primary text-white px-4 py-3 rounded-lg hover:bg-secondary transition">Send</button>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>
