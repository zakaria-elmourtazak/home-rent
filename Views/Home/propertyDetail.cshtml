    </main>

    <!-- Image Modal -->
    <div id="image-modal" class="modal">
        <div class="modal-content">
            <span class="close absolute top-4 right-8 text-white text-4xl cursor-pointer" onclick="closeModal()">&times;</span>
            <img id="modal-image" src="" alt="Property Image">
        </div>
    </div>

  