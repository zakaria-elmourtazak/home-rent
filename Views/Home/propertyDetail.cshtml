@{
    ViewData["Title"] = "Home Page";
}
@model MyMvcAuthProject.Models.PropertyDetailsViewModel
@{
    var p = Model.Property ;
    var isFavorite = Model.IsFavorite;
    var lat = Model.MapLatitude;
    var lon = Model.MapLongitude;
    var similarProperties = Model.similarProperties;
}
    <!-- Breadcrumb -->
 

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Property Images -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow-md p-6">
                    <!-- Main Image -->
                    <div class="relative">
                    @if (p.PropertyImages != null && p.PropertyImages.Any())
                    {
                        <img id="main-image" src="@p.PropertyImages.First().ImageUrl" alt="Modern Apartment" class="w-full h-96 object-cover rounded-lg">
                    }
                    else
                    {
                        <img id="main-image" src="https://via.placeholder.com/800x600?text=No+Image+Available" alt="No Image Available" class="w-full h-96 object-cover rounded-lg">
                    }
                    </div>
                    
                    <!-- Thumbnails -->
                    <div class="image-gallery">
                        @foreach (var image in p.PropertyImages)
                        {
                            <img src="@image.ImageUrl" alt="Property Image" onclick="changeImage(this.src)">
                        }
                    </div>
                </div>
                
                <!-- Property Description -->
                <div class="bg-white rounded-lg shadow-md p-6 mt-6">
                    <h2 class="text-2xl font-bold mb-4">Description</h2>
                    <p class="text-gray-700 leading-relaxed">
                    @p.Description
                    </p>
                    @* <p class="text-gray-700 leading-relaxed mt-4">
                        The open-concept living and dining area is perfect for entertaining, while the private balcony offers a peaceful retreat overlooking the city skyline. Building amenities include a fitness center, rooftop terrace, and 24-hour concierge service.
                    </p>
                    <p class="text-gray-700 leading-relaxed mt-4">
                        Located just minutes from shopping, dining, and entertainment options, this apartment offers the perfect blend of urban convenience and comfortable living.
                    </p> *@
                </div>
                
                <!-- Amenities -->
                <div class="bg-white rounded-lg shadow-md p-6 mt-6">
                    <h2 class="text-2xl font-bold mb-4">Amenities</h2>
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                        <div class="flex items-center">
                            <i class="fas fa-wifi text-primary mr-2"></i>
                            <span>WiFi</span>
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-car text-primary mr-2"></i>
                            <span>Parking</span>
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-snowflake text-primary mr-2"></i>
                            <span>Air Conditioning</span>
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-paw text-primary mr-2"></i>
                            <span>Pet Friendly</span>
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-swimming-pool text-primary mr-2"></i>
                            <span>Pool</span>
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-dumbbell text-primary mr-2"></i>
                            <span>Gym</span>
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-utensils text-primary mr-2"></i>
                            <span>Kitchen</span>
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-tv text-primary mr-2"></i>
                            <span>Cable TV</span>
                        </div>
                    </div>
                </div>
                
                <!-- Map -->
                <div class="bg-white rounded-lg shadow-md p-6 mt-6">
                    <h2 class="text-2xl font-bold mb-4">Location</h2>
                    <div class="bg-gray-200 border-2 border-dashed rounded-xl w-full h-64 flex items-center justify-center">
    @if (lat != null && lon != null)
    {
        var delta = 0.02; // adjust zoom: smaller = more zoom
        var lonMin = lon.Value - delta;
        var latMin = lat.Value - delta;
        var lonMax = lon.Value + delta;
        var latMax = lat.Value + delta;
        var iframeSrc = $"https://www.openstreetmap.org/export/embed.html?bbox={lonMin.ToString()}%2C{latMin.ToString()}%2C{lonMax.ToString()}%2C{latMax.ToString()}&layer=mapnik&marker={lat.Value.ToString()}%2C{lon.Value.ToString()}";
        <div class="w-full h-64 rounded-xl overflow-hidden border-2 border-dashed">
            <iframe width="100%" height="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                    src="@iframeSrc" style="border:0;"></iframe>
        </div>
        <p class="text-sm text-gray-600 mt-2">
            <a href="https://www.openstreetmap.org/?mlat=@lat&amp;mlon=@lon#map=14/@lat/@lon" target="_blank" class="text-primary hover:underline">Open in OpenStreetMap</a>
        </p>
    }
    else
    {
        <div class="bg-gray-200 border-2 border-dashed rounded-xl w-full h-64 flex items-center justify-center">
           <iframe
        width="100%"
        height="100%"
        frameborder="0"
        scrolling="no"
        marginheight="0"
        marginwidth="0"
        src="https://www.openstreetmap.org/export/embed.html?bbox=-7.65%2C33.55%2C-7.55%2C33.63&amp;layer=mapnik&amp;marker=33.589886%2C-7.603869"
        style="border:0;">
    </iframe>
            @* <p class="text-gray-500">Map not available for this address (@p.StreetAddress)</p> *@
        </div>
    }           </div>
                </div>
            </div>
            
            <!-- Property Details & Contact -->
            <div>
                <!-- Property Info -->
                <div class="bg-white rounded-lg shadow-md p-6 sticky top-6">
                    <div class="flex justify-between items-start mb-4">
                        <h1 class="text-2xl font-bold">@p.Title</h1>
                        <span class="bg-black/35 backdrop-blur-sm text-white uppercase font-bold text-white text-sm px-3 py-1 rounded-full">@p.PropertyType</span>
                    </div>
                    
                    <div class="flex items-center text-gray-600 mb-6">
                        <i class="fas fa-map-marker-alt text-red-500 mr-2"></i>
                        <span>@p.StreetAddress, @p.City, @p.State @p.ZipCode</span>
                    </div>
                    
                    <div class="text-3xl font-bold text-primary mb-6">$@p.PricePerMonth<span class="text-lg text-gray-600">/month</span></div>
                    
                    <div class="grid grid-cols-2 gap-4 mb-6">
                        <div class="flex items-center">
                            <i class="fas fa-bed text-primary mr-2"></i>
                            <span><strong>@p.Bedrooms</strong> Bedrooms</span>
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-bath text-primary mr-2"></i>
                            <span><strong>@p.Bathrooms</strong> Bathroom</span>
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-ruler-combined text-primary mr-2"></i>
                            <span><strong>@p.SquareFeet</strong> sqft</span>
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-calendar-alt text-primary mr-2"></i>
                            <span>Available Now</span>
                        </div>
                    </div>
                    <form asp-controller="Favorite" method="post" asp-action="AddFavorite" asp-route-id="@p.Id">
                    @if (isFavorite)
                    {
                        <button class="w-full bg-gray-400 text-white py-3 rounded-lg transition font-semibold mb-4" disabled>
                            <i class="fas fa-heart mr-2"></i> Saved
                        </button>
                    }
                    else
                    {
     <button class="w-full bg-primary hover:bg-secondary text-white py-3 rounded-lg transition font-semibold mb-4" >
                        <i class="fas fa-heart mr-2"></i> Save Property
                    </button>
                    }
</form>
                   
                    
                    <button class="w-full bg-accent hover:bg-orange-600 text-white py-3 rounded-lg transition font-semibold">
                        Schedule Tour
                    </button>
                </div>
                <div>
               
               @* contact info  *@
                 <div class="bg-white rounded-lg shadow-md p-8 mb-8">
                    <h2 class="text-2xl font-bold mb-6">Contact Information</h2>
                    
                    <div class="space-y-6">
                        
                        <div class="flex">
                            <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mr-4">
                                <i class="fas fa-phone-alt text-green-500"></i>
                            </div>
                            <div>
                                <h3 class="font-bold text-lg mb-1">Phone Number</h3>
                                <p class="text-gray-600">(123) 456-7890</p>
                            </div>
                        </div>
                        
                        <div class="flex">
                            <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mr-4">
                                <i class="fas fa-envelope text-purple-500"></i>
                            </div>
                            <div>
                                <h3 class="font-bold text-lg mb-1">Email Address</h3>
                                <p class="text-gray-600">info@homerent.com</p>
                            </div>
                        </div>
                        
                        <div class="flex">
                            <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center mr-4">
                                <i class="fas fa-clock text-yellow-500"></i>
                            </div>
                            <div>
                                <h3 class="font-bold text-lg mb-1">Tour Hours</h3>
                                <p class="text-gray-600">Monday - Friday: 9am - 6pm<br>Saturday: 10am - 4pm<br></p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Contact Form -->
                <div class="bg-white rounded-lg shadow-md p-6 mt-6">
                    <h2 class="text-2xl font-bold mb-4">Contact Landlord</h2>
                    <form>
                        <div class="mb-4">
                            <label class="block text-gray-700 mb-2">Name</label>
                            <input type="text" class="w-full p-3 border rounded-lg" required>
                        </div>
                        <div class="mb-4">
                            <label class="block text-gray-700 mb-2">Email</label>
                            <input type="email" class="w-full p-3 border rounded-lg" required>
                        </div>
                        <div class="mb-4">
                            <label class="block text-gray-700 mb-2">Phone</label>
                            <input type="tel" class="w-full p-3 border rounded-lg">
                        </div>
                        <div class="mb-4">
                            <label class="block text-gray-700 mb-2">Message</label>
                            <textarea class="w-full p-3 border rounded-lg h-32" required>I'm interested in this property. Please let me know when I can schedule a viewing.</textarea>
                        </div>
                        <button type="submit" class="w-full bg-primary hover:bg-secondary text-white py-3 rounded-lg transition font-semibold">
                            Send Message
                        </button>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Similar Properties -->
       
                
            </div>
             <div class="mt-16">
            <h2 class="text-xl font-bold mb-8">Similar Properties</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Property Card 1 -->
                  @foreach (Property sp in similarProperties)
                {
