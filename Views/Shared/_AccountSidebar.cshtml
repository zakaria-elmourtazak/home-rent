@using System
@{
    // get route data
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";

    Func<string, string, string> isActive = (ctrl, act) =>
    {
        if (string.IsNullOrEmpty(ctrl)) return "";
        // if action empty -> match controller only
        if (string.IsNullOrEmpty(act))
            return string.Equals(currentController, ctrl, StringComparison.OrdinalIgnoreCase) ? "active" : "";
        return string.Equals(currentController, ctrl, StringComparison.OrdinalIgnoreCase)
               && string.Equals(currentAction, act, StringComparison.OrdinalIgnoreCase) ? "active" : "";
    };
}
