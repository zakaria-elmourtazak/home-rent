@{
    ViewData["Title"] = "Home Page";
     var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";

    Func<string, string, string> navClass = (ctrl, act) =>
    {
        var baseCls = "text-white hover:text-primary transition duration-300";
        var activeCls = " text-white font-semibold hover:text-secondary border-b-2 border-primary";
        var isActive = string.Equals(ctrl, currentController, System.StringComparison.OrdinalIgnoreCase)
                       && (string.IsNullOrEmpty(act) || string.Equals(act, currentAction, System.StringComparison.OrdinalIgnoreCase));
        return isActive ? baseCls + activeCls : baseCls;
    };

    Func<string, string, bool> isActive = (ctrl, act) =>
        string.Equals(ctrl, currentController, System.StringComparison.OrdinalIgnoreCase)
        && (string.IsNullOrEmpty(act) || string.Equals(act, currentAction, System.StringComparison.OrdinalIgnoreCase));
